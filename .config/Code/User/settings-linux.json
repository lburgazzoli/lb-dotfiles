// Place your settings in this file to overwrite the default settings
{
        // Editor
        "editor.minimap.enabled": false,
        "editor.fontFamily": "'Noto Mono'",
        "editor.fontSize": 12,
        "editor.wordWrap": "off",
        "editor.cursorStyle": "line",
        "editor.renderIndentGuides": false,
        "editor.renderLineHighlight": "gutter",
        "editor.rulers": [
                120
        ],
        
        // Workbench
        "workbench.startupEditor": "newUntitledFile",
        "workbench.colorTheme": "Monokai",
        "workbench.iconTheme": "vscode-icons",
        "workbench.panel.location": "bottom",
        "workbench.activityBar.visible": false,
        "workbench.colorCustomizations": {
                "editorIndentGuide.activeBackground": "#ff0000"
        },

        // Windows
        "window.zoomLevel": 0,
        "window.menuBarVisibility": "toggle",
        "window.restoreWindows": "none",

        // Misc
        "vsicons.dontShowNewVersionMessage": true,

        // Java
        "java.errors.incompleteClasspath.severity": "ignore",
        
        // Explorer
        "explorer.openEditors.visible": 0,
        
        // Docker
        "docker.showExplorer": false,

        // Terminal
        "terminal.integrated.enableBold": false,
        "terminal.integrated.fontSize": 12,
        "terminal.integrated.cursorBlinking": true,

        // 
        "files.exclude": {
                "**/.idea": true,
                "**/.gradle": true,
                "**/.mwn": true
        },
        "vsicons.projectDetection.autoReload": true,
        "rust.mode": "rls",
        "rust.rustup": {
                "toolchain": "nightly-x86_64-unknown-linux-gnu",
                "nightlyToolchain": "nightly-x86_64-unknown-linux-gnu"
        },
        "rust.rls": {
                "useRustfmt": true
        },
        "gitlens.keymap": "chorded",
        "gitlens.codeLens.enabled": false,
        "gitlens.advanced.messages": {
                "suppressCommitHasNoPreviousCommitWarning": false,
                "suppressCommitNotFoundWarning": false,
                "suppressFileNotUnderSourceControlWarning": false,
                "suppressGitVersionWarning": false,
                "suppressLineUncommittedWarning": false,
                "suppressNoRepositoryWarning": false,
                "suppressResultsExplorerNotice": false,
                "suppressShowKeyBindingsNotice": true
        },
        "java.jdt.ls.vmargs": "-noverify -Xmx1G -XX:+UseG1GC -XX:+UseStringDeduplication -javaagent:\"/home/lburgazz/.vscode/extensions/gabrielbb.vscode-lombok-0.9.5/server/lombok.jar\" -Xbootclasspath/a:\"/home/lburgazz/.vscode/extensions/gabrielbb.vscode-lombok-0.9.5/server/lombok.jar\"",
        "gitlens.historyExplorer.enabled": true,
        "editor.wordWrapColumn": 100
}
