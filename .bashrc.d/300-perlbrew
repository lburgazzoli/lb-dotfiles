
export PERLBREW_ROOT=${LB_SFW_LANG_HOME}/perl/perlbrew
export PERLBREW_HOME=${LB_SFW_LANG_HOME}/perl/.perlbrew

if [ -f ${PERLBREW_ROOT}/etc/bashrc ]; then
    source ${PERLBREW_ROOT}/etc/bashrc

    if [ -f ${PERLBREW_ROOT}/etc/perlbrew-completion.bash ]; then
        source ${PERLBREW_ROOT}/etc/perlbrew-completion.bash
    fi
fi

